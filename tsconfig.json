{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",

    // temp
    "declaration": true,
    "declarationDir": "./types",

    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}